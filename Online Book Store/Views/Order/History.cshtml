@model IEnumerable<Online_Book_Store.Models.Order> 
@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_BookStoreLayout.cshtml";
}
<link href="~/Styles/Order.css" rel="stylesheet" />
<div class="oreder-history-content">
    <h2>Orders History</h2>
    @{
        if (Model.Count() == 0)
        {
            <span>No Orders Yet</span>
        }
        else
        {
            <table class="table table-bordered">
                <tr class="thead-dark thead">
                    <th>Order refference Id</th>
                    <th>Amount</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>More Info</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><span>@item.OrderId</span></td>
                        <td><span>Rs. @item.Amount </span></td>
                        <td><span>@item.OrderDate.ToShortDateString() </span></td>
                        <td><span class="order-status">order successful</span></td>
                        <td><span><a href="@Url.Action("Details", "Order",new { orderId = item.OrderId})" class="order-detail-link">Order details</a> </span></td>
                    </tr>
                }
            </table>
        }
    }
</div>

