
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BookStoreLayout.cshtml";
}
<link href="~/Styles/Login.css" rel="stylesheet" />
<p class="login-warning">@TempData["LoginMessage"] </p>
<div class="content">
    <div class="logo">
        <h4>THE BOOK STORE</h4>
        <h4>Login</h4>
        <p>Get access to your Orders, Recommendations and Carts</p>
    </div>
    <div class="sub-content">
        <div class="login-form">
            <form method="post" action="@Url.Action("Login", "Account")">
                <div class="input-container">
                    <input type="text" placeholder="Enter your username" id="Username" name="Username" value=@Model.Username>
                <p class="error-message">@ViewBag.UserIdErrorMessage</p>
                </div>
                <div class="input-container">
                    <input type="password" placeholder="Enter your password" id="Password" name="Password">
                    <p class="error-message">@ViewBag.PasswordErrorMessage</p>
                </div>
                <input type="submit" class="btn  submit-btn" value="Login">
            </form>
        </div>
        <div class="create-link">
            <p>Don't have an account? <a href="@Url.Action("Create", "Account")">Create new account</a></p>
        </div>
    </div>
</div>
