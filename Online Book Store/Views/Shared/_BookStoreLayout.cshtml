@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/Styles/Navbar.css" rel="stylesheet" />
    <link href="~/Styles/Home.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav>
            <ul class="navbar-one">
                <li class="navbar-one-item">
                    <h3 class="navbar-logo"><a href="@Url.Action("Home", "Shop")">THE BOOK STORE</a></h3>
                </li>
                <li class="navbar-one-item">
                    <form class="search" method="get" action="@Url.Action("Search", "Shop")">
                        <button class="search-btn" type="submit">Search</button>
                        <input type="text" class="search-text" name="Searched" placeholder="search your book title here ...">
                    </form>
                </li>
                <li class="navbar-one-item">
                    <a href="@Url.Action("History", "Order")">Orders</a>
                </li>
                <li class="navbar-one-item">
                    <a href="@Url.Action("Watch", "Cart")">Cart</a>
                </li>
                @{
                    if (TempData["CurrentUserName"] != null)
                    {
                        <li class="navbar-one-item">
                            <em>Hi, @TempData["CurrentUserName"]</em>
                        </li>
                        <li class="navbar-one-item">
                            <a href="@Url.Action("Logout", "Account")">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="navbar-one-item">
                            <a href="@Url.Action("Login", "Account")">Seller's Hub</a>
                        </li>
                        <li class="navbar-one-item">
                            <a href="@Url.Action("Login", "Account")">Login</a>
                        </li>
                    }
                }

            </ul>
        </nav>
        <nav>
            <ul class="navbar-two">
                <li class="navbar-two-item">
                    <a href="@Url.Action("Category", "Shop",new {category="Autobiography"})">Autobiography</a>
                </li>
                <li class="navbar-two-item">
                    <a href="@Url.Action("Category", "Shop",new {category="Business"})">Business</a>
                </li>
                <li class="navbar-two-item">
                    <a href="@Url.Action("Category", "Shop",new {category="Comics"})">Comics</a>
                </li>
                <li class="navbar-two-item">
                    <a href="@Url.Action("Category", "Shop",new {category="History"})">History</a>
                </li>
                <li class="navbar-two-item">
                    <a href="@Url.Action("Category", "Shop",new {category="Self-Help"})">Self-Help</a>
                </li>
                <li class="navbar-two-item">
                    <a href="@Url.Action("Category", "Shop",new {category="Story"})">Story</a>
                </li>
            </ul>
        </nav>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
